{
  "name": "smart-table-football",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": "10.15.0"
  },
  "repository": "git@github.com:Jozwiaczek/smart-table-football.git",
  "author": "jozwiak <kubencki@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "stf-api",
    "stf-core",
    "stf-player",
    "stf-admin"
  ],
  "scripts": {
    "heroku-postbuild": "yarn install",
    "start": "if [ -n \"$START_API\" ]; then cd stf-api && echo api && yarn start; elif [ -n \"$START_ADMIN\" ]; then cd stf-admin && echo admin && yarn start; else cd stf-player && echo player && yarn start; fi",
    "lint": "yarn wsrun eslint"
  },
  "devDependencies": {
    "standard": "^12.0.1",
    "wsrun": "latest"
  }
}
