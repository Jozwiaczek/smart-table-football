{
  "productName": "Smart Table Football Admin",
  "artifactName": "STF-Admin-${version}.${ext}",
  "appId": "com.stf.admin-app",
  "files": [
    {
      "from": "./node_modules/electron-updater/**/*",
      "to": "./admin-desktop/node_modules/electron-updater"
    },
    "./package.json",
    "./packages/admin-desktop/**/*"
  ],
  "directories": {
    "buildResources": "./packages/admin-desktop/assets",
    "output": "./packages/admin-desktop/release"
  },
  "mac": {
    "category": "public.app-category.games",
    "target": "dmg"
  },
  "linux": {
    "publish": "github"
  }
}
